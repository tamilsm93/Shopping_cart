<!DOCTYPE html>
<html>
  <head>
    <title>ShoppingCart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="#">
        <img src="https://lh3.googleusercontent.com/proxy/6vYNATCdQjRG3ZgaI_5A5mu9SgwmgRlAHSXj--bkEFZM37z1p-FChHLrZuFbHdHDnRp3wu-WK7r-jOohpgTnG3HFdHZ_EjGntaWOVoJzxzbrrfNPSXsRvNOfXzy8JqziTfW_8ilgFwKoZ_dvrwOuE_K8-GzDvQflrp9v2gx4UkuiE8_iaDrAAGs" width="100" height="550">
      </a>

      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item">
          Home
        </a>

        <a class="navbar-item">
           <%= link_to 'Categories', categories_path , style: "margin-top: 18px;"%>
        </a>
        <a class="navbar-item">
          <%= link_to 'Items', items_path, style: "margin-top: 18px;" %>
        </a>

        <div class="navbar-item">
          <%= link_to 'ADD CATEGORIES', new_category_path, style: "margin-top: 10px;" %>
        </div>

        <div class="navbar-item">
          <%= link_to 'ADD ITEMS', new_item_path,style: "margin-top: 10px;" %>
        </div>


        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link">
            Category_Items
          </a>
          <div class="navbar-dropdown">
       <% category = Category.all %>
          <% category.each do |category| %>
            <a class="navbar-item">
              <%= link_to category.name, category_items_path(id: category) %>
            </a>
           <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
